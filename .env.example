# === Email polling & reply settings ===
# MXroute IMAP (reading attachments)
IMAP_SERVER=mail.example.com
IMAP_USER=phish@example.com
IMAP_PASS=CHANGE_ME

# MXroute SMTP (sending the report)
SMTP_SERVER==mail.example.com
SMTP_PORT=465
SMTP_USER=phish@example.com
SMTP_PASS=CHANGE_ME

# Report From address (what recipients will see)
REPLY_FROM=phish@example.com

# === Threat intel API keys (optional but recommended) ===
# VirusTotal API key (https://www.virustotal.com/gui/my-apikey)
VT_API_KEY=YOUR_VT_KEY
# Google Safe Browsing API key (https://console.cloud.google.com/ -> APIs & Services)
GSB_API_KEY=YOUR_GSB_KEY

# === Scoring (tweak as needed) ===
DKIM_FAIL_POINTS=35
SPF_NOTPASS_POINTS=25
VT_MALICIOUS_POINTS=30
SB_HIT_POINTS=30
THRESHOLD_SUSPICIOUS=35
THRESHOLD_MALICIOUS=70

# === Poll interval (seconds) ===
POLL_SECONDS=30
